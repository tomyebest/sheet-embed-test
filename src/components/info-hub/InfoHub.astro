---
const pageHeading = "YTC's Information Hub";
const pageDescription = "This is a description. School is cool, gee";

const blogPreview = {
postDate: "September 25, 2023",
postCategory:"Politics",
}

const literature = ["this", "is", "a", "list"];

---



<div class="bg-white py-18 py-24 border-b border-lime-800/10 ">
  <div class="mx-auto max-w-7xl px-6">
    <div class="mx-auto text-start">
      <h2 class="text-5xl font-bold tracking-tight text-zinc-950 sm:text-5xl">{pageHeading}</h2>
      <p class="mt-2 text-md leading-8 text-zinc-800">{pageDescription}</p>
    </div>
    <hr class="border-lime-800/10 my-8">
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      <article class="flex flex-col items-start justify-between">
        <div class="relative w-full">
          <img src="https://images.unsplash.com/photo-1496128858413-b36217c2ce36?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3603&q=80" alt="" class="aspect-[16/9] w-full rounded-2xl shadow-lg border-2 border-lime-800 object-cover sm:aspect-[2/1] lg:aspect-[3/2]">
          <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
        </div>
        <div class="max-w-xl">
          <div class="mt-10 flex items-center gap-x-4 text-xs">
            <time datetime="2020-03-16" class="text-gray-500">{blogPreview.postDate}</time>
            <a href="#" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">{blogPreview.postCategory}</a>
          </div>
          <div class="group relative">
            <h3 class="mt-3 text-lg font-semibold leading-6 text-zinc-800 group-hover:text-gray-600">
              <a href="#">
                <span class="absolute inset-0"></span>
                Boost your conversion rate
              </a>
            </h3>
            <p class="mt-5 line-clamp-3 text-sm leading-6 text-zinc-800">
              
              <ul>
              
                {literature.map((lit) => <li>{lit}</li>)}

            
            </ul></p>
          </div>
          <div class="relative mt-8 flex items-center gap-x-4">
            <img src="https://images.unsplash.com/photo-1519244703995-f4e0f30006d5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="" class="h-10 w-10 rounded-full shadow-lg border-2 border-lime-800">
            <div class="text-sm leading-6">
              <p class="font-semibold text-zinc-800">
                <a href="#">
                  <span class="absolute inset-0"></span>
                  Michael Foster
                </a>
              </p>
              <p class="text-zinc-800">Co-Founder / CTO</p>
            </div>
          </div>
        </div>
      </article>

      <!-- More posts... -->
    </div>
  </div>
</div>
