---
import HeroImage1 from '../../images/female-teacher.png';
import HeroImage2 from '../../images/young-male-teacher.jpeg';
import HeroImage3 from '../../images/teacher1.png';
import HeroImage4 from '../../images/maths-portrait.webp';
import HeroImage5 from '../../images/young-female-teacher.jpeg';

const title = "Your perfect tutor is just one click away.";
const description = "Your Tutoring Co’s mission is to provide students with the opportunity to access the expert and specialised tuition they need to achieve their learning goals, at prices they can afford.";
const findTutorLink = "#";
const learnMoreLink = "#";

---

<div class="border-b border-lime-800/10">
    <main>
      <div class="relative isolate">
        <div class="overflow-hidden">
          <div class="mx-auto max-w-7xl px-6 pb-32 pt-16 sm:pt-30 lg:px-8 lg:pt-12">
            <div class="mx-auto max-w-2xl gap-x-14 lg:mx-0 lg:flex lg:max-w-none items-top">
              <div class="w-full max-w-xl lg:shrink-0 xl:max-w-2xl">
                <h1 class="text-4xl font-bold tracking-tight text-zinc-950 sm:text-6xl lg:mt-36">{title}</h1>
                <p class="relative mt-6 text-lg leading-8 text-zinc-800 sm:max-w-md lg:max-w-none">{description}</p>
                <div class="mt-10 flex items-center gap-x-6">
                  <a href={findTutorLink} class="rounded-md bg-lime-200 px-3.5 py-2.5 text-sm font-semibold text-zinc-950 shadow-sm hover:bg-lime-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-lime-800">Find Your Tutor</a>
                  <a href={learnMoreLink} class="text-sm font-semibold leading-6 text-zinc-950">Learn More <span aria-hidden="true">→</span></a>
                </div>
              </div>
              <div class="mt-14 flex justify-end gap-8 sm:-mt-44 sm:justify-start sm:pl-20 lg:mt-0 lg:pl-0">
                <div class="ml-auto w-44 flex-none space-y-8 pt-32 sm:ml-0 sm:pt-80 lg:order-last lg:pt-36 xl:order-none xl:pt-80">
                  <div class="relative">
                    <img src={HeroImage1.src} alt="" class="aspect-[2/3] w-full rounded-xl bg-zinc-950/5 object-cover shadow-lg border-2 border-lime-800">
                    <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-inset ring-zinc-950/10"></div>
                  </div>
                </div>
                <div class="mr-auto w-44 flex-none space-y-8 sm:mr-0 sm:pt-52 lg:pt-36">
                  <div class="relative">
                    <img src={HeroImage2.src} alt="" class="aspect-[2/3] w-full rounded-xl bg-zinc-900/5 object-cover shadow-lg border-2 border-lime-800">
                    <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-inset ring-zinc-950/10"></div>
                  </div>
                  <div class="relative">
                    <img src={HeroImage3.src} alt="" class="aspect-[2/3] w-full rounded-xl bg-zinc-900/5 object-cover shadow-lg border-2 border-lime-800">
                    <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-inset ring-zinc-950/10"></div>
                  </div>
                </div>
                <div class="w-44 flex-none space-y-8 pt-32 sm:pt-0">
                  <div class="relative">
                    <img src={HeroImage4.src} alt="" class="aspect-[2/3] w-full rounded-xl bg-zinc-900/5 object-cover shadow-lg border-2 border-lime-800">
                    <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-inset ring-zinc-950/10"></div>
                  </div>
                  <div class="relative">
                    <img src={HeroImage5.src} alt="" class="aspect-[2/3] w-full rounded-xl bg-zinc-900/5 object-cover shadow-lg border-2 border-lime-800">
                    <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-inset ring-zinc-950/10"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
</div>
