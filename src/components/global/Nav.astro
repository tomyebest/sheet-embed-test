---
import Logo from '../images/ytc-transparent-logo.png';
---
<header class="bg-green-50/90 sticky top-0 z-50 sm:bg-green-50/90 sm:backdrop-blur justify-center border-b border-lime-800/10">
    <nav class="mx-auto flex max-w-7xl items-center justify-between p-2 lg:px-8" aria-label="Global">
      <!-- Logo at the start -->
      <div class="hidden sm:flex items-center">
        <a href="/">
          <span class="sr-only">Your Company</span>
          <img class="h-20 w-auto" src={Logo.src} alt="">
        </a>
      </div>

      <!-- Links centered -->
      <div class="flex items-center gap-x-4 sm:gap-x-6 lg:gap-x-12">
        <a href="/#students-intro" class="text-sm font-semibold leading-6 text-zinc-950  hover:ring-2 hover:ring-lime-200 rounded-lg px-3 py-1.5 focus:outline-none">Students</a>
        <a href="/tutors" class="text-sm font-semibold leading-6 text-zinc-950  hover:ring-2 hover:ring-lime-200 rounded-lg px-3 py-1.5 focus:outline-none">Tutors</a>
        <a href="/#how-it-works" class="text-sm font-semibold leading-6 text-zinc-950  hover:ring-2 hover:ring-lime-200 rounded-lg px-3 py-1.5 focus:outline-none">How it Works</a>
        <a href="/information-hub" class="text-sm font-semibold leading-6 text-zinc-950  hover:ring-2 hover:ring-lime-200 rounded-lg px-3 py-1.5 focus:outline-none">
          Info Hub
        </a>

      </div>

      <!-- Contact us button at the end -->
      <div class="flex items-center">
        <a href="#" class="rounded-md bg-lime-200 px-3 py-2 text-sm font-semibold text-zinc-950 shadow-sm hover:bg-lime-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2">Get Started</a>
      </div>
    </nav>
</header>